{
  "name": "zero-md",
  "version": "2.4.2",
  "description": "Ridiculously simple zero-config markdown displayer",
  "author": "Jason Lee <jason@zerodevx.com>",
  "type": "module",
  "exports": "./src/index.js",
  "scripts": {
    "dev": "rollup -c -w",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "npm run dev",
    "build": "rollup -c",
    "prepublishOnly": "npm run format && npm run lint && npm run build",
    "docs:build": "zero-md-docs && sscli -b https://zerodevx.github.io/zero-md/ -r docs -i 'v1/**' --slash"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "chai": "^4.3.7",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "rollup": "^3.25.3",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^2.0.2",
    "static-sitemap-cli": "^2.2.2",
    "zero-md-docs": "^0.1.8"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "files": [
    "src/",
    "dist/"
  ],
  "license": "ISC",
  "repository": "github:zerodevx/zero-md",
  "homepage": "https://zerodevx.github.io/zero-md/",
  "keywords": [
    "webcomponents",
    "customelements",
    "markdown-to-html",
    "marked",
    "prism"
  ]
}
